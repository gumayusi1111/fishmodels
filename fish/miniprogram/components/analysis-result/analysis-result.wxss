/* 分析结果容器 */
.analysis-result {
  padding: 32rpx;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 24rpx;
  margin: 20rpx 0;
  box-shadow: 0 12rpx 40rpx rgba(252, 182, 159, 0.4);
  position: relative;
  overflow: hidden;
}

.analysis-result::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 60 60"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="%23ffffff" opacity="0.1"/></pattern></defs><rect width="60" height="60" fill="url(%23dots)"/></svg>');
}

/* 结果标题 */
.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.6);
  position: relative;
  z-index: 1;
}

.result-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  text-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
}

.confidence {
  font-size: 26rpx;
  color: #555;
  background: rgba(255, 255, 255, 0.8);
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  font-weight: 600;
}

/* 物种信息 */
.species-info {
  margin-bottom: 32rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.species-name {
  margin-bottom: 16rpx;
}

.chinese-name {
  font-size: 32rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-right: 20rpx;
}

.scientific-name {
  font-size: 26rpx;
  color: #666;
  font-style: italic;
  font-weight: 500;
}

.species-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.family, .habitat {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 健康状态 */
.health-status {
  margin-bottom: 32rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.health-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.health-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.health-score {
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 700;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  animation: score-pulse 2s ease-in-out infinite;
}

@keyframes score-pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.score-good {
  background: linear-gradient(135deg, #52c41a, #73d13d);
}

.score-fair {
  background: linear-gradient(135deg, #faad14, #ffc53d);
}

.score-poor {
  background: linear-gradient(135deg, #ff4d4f, #ff7875);
}

.health-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  font-weight: 500;
}

/* 视频分析 */
.video-analysis {
  margin-bottom: 32rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.analysis-header {
  margin-bottom: 20rpx;
}

.analysis-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

/* 健康趋势图表 */
.health-trend {
  margin-bottom: 24rpx;
}

.trend-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
  font-weight: 600;
}

.trend-chart {
  position: relative;
  height: 240rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border-radius: 16rpx;
  margin: 20rpx 0;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.trend-chart::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent 49%, rgba(255, 255, 255, 0.1) 50%, transparent 51%);
  background-size: 20rpx 20rpx;
}

.trend-point {
  position: absolute;
  transform: translateX(-50%);
  width: 16rpx;
  height: 16rpx;
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(79, 172, 254, 0.4);
  animation: point-glow 2s ease-in-out infinite;
}

@keyframes point-glow {
  0%, 100% {
    box-shadow: 0 2rpx 8rpx rgba(79, 172, 254, 0.4);
  }
  50% {
    box-shadow: 0 4rpx 16rpx rgba(79, 172, 254, 0.8);
  }
}

/* 操作按钮 */
.result-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
  position: relative;
  z-index: 1;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.save-btn {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  color: white;
}

.share-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}